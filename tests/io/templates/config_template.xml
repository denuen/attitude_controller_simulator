<?xml version="1.0" encoding="UTF-8"?>
<AttitudeControllerConfig xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <ControllerGains>
        <Kp x="2.5" y="1.8" z="3.2" />
        <Ki x="0.1" y="0.05" z="0.15" />
        <Kd x="0.8" y="0.6" z="1.2" />
    </ControllerGains>

    <PhysicalProperties>
        <Inertia x="0.045" y="0.038" z="0.067" />
    </PhysicalProperties>

    <SensorCharacteristics>
        <DriftRate x="0.001" y="0.0008" z="0.0012" />
        <NoiseStdDev x="0.02" y="0.015" z="0.025" />
    </SensorCharacteristics>

    <ActuatorProperties>
        <Delay>0.02</Delay>
        <!-- Maximum torque per axis (Nm) -->
        <MaxTorquePerAxis x="5.0" y="5.0" z="6.0" />
        <!-- Maximum total torque magnitude (Nm) -->
        <MaxTorqueMagnitude>8.0</MaxTorqueMagnitude>
    </ActuatorProperties>

    <!-- Controller Parameters -->
    <ControllerParameters>
        <!-- Output smoothing factor (0.0-1.0) -->
        <Smoothing>0.5</Smoothing>
        <!-- Anti-windup factor (0.0-1.0) -->
        <AntiWindup>0.3</AntiWindup>
    </ControllerParameters>

    <!-- Initial Conditions -->
    <InitialConditions>
        <!-- Initial attitude (pitch, yaw, roll in radians) -->
        <Attitude x="0.0" y="0.0" z="0.0" />
        <!-- Initial angular velocity (rad/s) -->
        <AngularVelocity x="0.0" y="0.0" z="0.0" />
    </InitialConditions>

    <SetpointSequence>
        <Setpoint time="0.0" roll="0.0" pitch="0.0" yaw="0.0" />
        <Setpoint time="5.0" roll="10.0" pitch="0.0" yaw="0.0" />
        <Setpoint time="10.0" roll="10.0" pitch="5.0" yaw="0.0" />
        <Setpoint time="15.0" roll="0.0" pitch="5.0" yaw="15.0" />
    </SetpointSequence>
</AttitudeControllerConfig>
